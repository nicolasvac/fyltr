{
    "name": "nicolasvac/fyltr",
    "type": "library",
    "description": "A complete and PSR-compatible data validation library",
    "keywords": [
        "nicolasvac",
        "fyltr"
    ],
    "homepage": "https://github.com/nicolasvac/fyltr",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Vaccari",
            "email": "contact@nicolasvaccari.com",
            "homepage": "https://nicolasvaccari.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7|^8"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Nicolasvac\\Fyltr\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nicolasvac\\Fyltr\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
